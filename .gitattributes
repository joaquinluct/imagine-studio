# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout (CRLF for Windows)
*.md text eol=crlf
*.cpp text eol=crlf
*.h text eol=crlf
*.hpp text eol=crlf
*.c text eol=crlf
*.txt text eol=crlf
*.cmake text eol=crlf
*.json text eol=crlf
*.yml text eol=crlf
*.yaml text eol=crlf
*.xml text eol=crlf
*.ini text eol=crlf
*.bat text eol=crlf
*.ps1 text eol=crlf
*.sh text eol=lf

# Visual Studio files
*.sln text eol=crlf
*.csproj text eol=crlf
*.vcxproj text eol=crlf
*.vcxproj.filters text eol=crlf
*.vcxproj.user text eol=crlf

# CMake files
CMakeLists.txt text eol=crlf
*.cmake text eol=crlf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.dat binary
*.exe binary
*.dll binary
*.lib binary
*.pdb binary
*.obj binary
*.o binary
*.a binary
*.so binary
*.dylib binary
*.zip binary
*.7z binary
*.rar binary
*.tar binary
*.gz binary
